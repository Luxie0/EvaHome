<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintFragmentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SepetFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sepetList"
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:layout_marginTop="232dp"
        android:layout_marginBottom="79dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSepetiTemizle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="155dp"
        android:text="Sepetinizdekiler"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSepetiTemizle"
        style="@android:style/Widget.DeviceDefault.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/edittextarkaplan"
        android:backgroundTint="#48959494"
        android:includeFontPadding="false"
        android:padding="16dp"
        android:text="Sepeti Temizle"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sepetList" />

    <Button
        android:id="@+id/btnSiparisVer"
        style="@android:style/Widget.DeviceDefault.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/edittextarkaplan"
        android:backgroundTint="#48959494"
        android:includeFontPadding="false"
        android:padding="16dp"
        android:text="SipariÅŸ Ver"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSepetiTemizle"
        app:layout_constraintTop_toBottomOf="@+id/sepetList" />

    <ImageView
        android:id="@+id/sepetEvaLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/evateklogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toplamFiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="319dp"
        android:layout_marginBottom="34dp"
        android:text="Toplam Fiyat: "
        app:layout_constraintBottom_toTopOf="@+id/btnSepetiTemizle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sepetList" />

</androidx.constraintlayout.widget.ConstraintLayout>